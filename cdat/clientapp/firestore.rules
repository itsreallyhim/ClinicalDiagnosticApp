rules_version = '2';
service cloud.firestore {
match /databases/{database}/documents {

match /{document=**} {
allow read: if true
allow write: if request.auth != null
}
match /repsonses/{response_id} {
	allow read,write:if request.auth != null
  
}

match /assessments/{assessment_id} {
	allow read:if true
}

match /questions/{question_id} {
	allow read:if true
}

match /question_type/{question_type_id} {
	allow read:if true
}

match /users/{user_id} {
  	allow read,write, update: if request.auth.uid == user_id
  }
  
  }
}